<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".Results"
    android:background="@drawable/casino">


    <TextView
        android:id="@+id/highScoreLabel"
        android:layout_width="253dp"
        android:layout_height="57dp"
        android:text=" High Score : 10"
        android:textColor="#F3EA4B"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:backgroundTint="#0AFFFFFF"
        android:foregroundTint="#0AFFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScoreLabel"
        app:srcCompat="@drawable/mainmenu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="246dp"
        android:layout_height="69dp"
        android:layout_marginBottom="164dp"
        android:text=" Game Over"
        android:textColor="#F4EFEF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="100"
        android:textColor="#DFC413"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameScore"
        android:layout_width="165dp"
        android:layout_height="36dp"
        android:text="#1 Luigi : 50"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#113908"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/imageButton9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/highScoreLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/nameScore3"
        android:layout_width="163dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="#3 Peach : 0"
        android:textAlignment="center"
        android:textColor="#C60A0A"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameScore2" />

    <TextView
        android:id="@+id/nameScore2"
        android:layout_width="166dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:text="#2 Mario : 0"
        android:textAlignment="center"
        android:textColor="#EA6767"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameScore" />


</androidx.constraintlayout.widget.ConstraintLayout>